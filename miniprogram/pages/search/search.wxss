/* Swiper相关的样式 */
.swiper {
    position: absolute;
    height: 12.91vh;
    top: 16.94vh;
    width: 100vw;
}
.information {
    height: 12.91vh;
    width: 87.69vw;
    background: #7293DD;
    border-radius: 2.56vw;
}
/* 搜索框 */
.searchBar {
    position: absolute;
    width: 87.69vw;
    height: 5.57vh;
    left: 6.15vw;
    top: 32.11vh;

    z-index: 2;
    background: #FFFFFF;
    border: 1px solid #4F71BE;
    box-sizing: border-box;
    border-radius: 2.56vw;

    display: flex;
    flex-direction: row;
    align-items: center;    /**子view垂直居中*/
    vertical-align: center; /**垂直居中*/
}
.searchBarFocus {
    position: absolute;
    width: 87.69vw;
    height: 5.57vh;
    left: 6.15vw;
    top: 16.94vh;

    z-index: 2;
    background: #FFFFFF;
    border: 1px solid #4F71BE;
    box-sizing: border-box;
    border-radius: 2.56vw;

    display: flex;
    flex-direction: row;
    align-items: center;    /**子view垂直居中*/
    vertical-align: center; /**垂直居中*/
}
.placeholder {
    /* font-family: PingFang SC; */
